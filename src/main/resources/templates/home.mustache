{{>layout/header}}


<div id="banner">
    <div class="container clearfix">
        <div class="slider">
            <div class="slides slide1"></div>
            <div class="slides slide2"></div>
            <div class="slides slide3"></div>
        </div>
    </div>

    <div id="contents">
        <div class="container clearfix">
            <div class="cont_left">
                <h2>새소식</h2>
            </div>
            <div class="cont_center">
                <ul>
                    {{#notices}}
                        <li class="clearfix" onclick="location.href='/notice/{{id}}'">
