{{>layout/header}}
<div id="board_banner" class="notice">
    <h1 class="ir_pm">새소식</h1>
</div>

<div id="write">
    <div class="container">
        <div class="write_box">
            <form>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control title" placeholder="제목을 입력하세요" value="{{notice.title}}">
                </div>
                <div class="form-group" >
                    <label for="author">작성자</label>
                    <input type="text" class="form-control author" value="{{notice.author}}">
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea class="form-control content" placeholder="내용을 입력하세요">{{notice.content}}</textarea>
                </div>
                <input type="submit" id="btn-save" value="작성 완료" />
            </form>
        </div>
    </div>
</div>

{{>layout/footer}}